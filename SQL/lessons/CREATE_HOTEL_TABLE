CREATE TABLE HOTEL(
ID NUMBER,
CONSTRAINT HOTEL_PK PRIMARY KEY (ID),
--CONSTRAINT CONST-NAME CONSTRAINT TYPE (COLUMN NAME)
COUNTRY NVARCHAR2(50) DEFAULT 'N/A',
CONSTRAINT CHECK_COUNTRY CHECK(COUNTRY != 'Romania' AND COUNTRY != 'Belgium'
AND COUNTRY != 'China' AND COUNTRY != 'Ukraine'),
CITY NVARCHAR2(50) NOT NULL,
STREET NVARCHAR2
);